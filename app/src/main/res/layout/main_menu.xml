            android:layout_weight="0.5">


            <TextView
                android:id="@+id/attemptfee"
                fontPath="fonts/OpenSans-Bold.ttf"
                android:layout_width="500dp"
                android:layout_height="90dp"
                android:layout_marginLeft="0dp"
